@{
    ViewData["Title"] = "Registrar Paciente o Agendar Cita";
}

<h2>Registrar Paciente o Agendar Cita</h2>

<h3>Buscar Paciente por Cédula</h3>
<form method="post">
    <label for="cedula">Ingrese cédula:</label>
    <input type="text" id="cedula" name="Cedula" placeholder="Cédula del paciente" required />
    <button type="submit" asp-page-handler="Buscar" class="btn btn-primary">Buscar</button>
</form>

<h2>Citas del Día</h2>

<a href="/Home/Ingresar_Citas" class="btn btn-primary">Agregar Cita</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID Cita</th>
            <th>ID Paciente</th>
            <th>Fecha y Hora</th>
            <th>Motivo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Citas citas in this.Model)
        {
            <tr>
                <td>@citas.Id_Cita</td>
                <td>@citas.Id_Paciente</td>
                <td>@citas.FechaHora.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@citas.Motivo</td>
                <td>@citas.Estado</td>
                <td>
                    <a href="/Main/ModificarCita?id=@citas.Id_Cita" class="btn btn-primary">Modificar</a>
                    <a href="/Main/EliminarCita?id=@citas.Id_Cita" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
